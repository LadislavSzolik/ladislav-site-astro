---
const pageTitle =
   "Ladislav's site"; /* Not using dynamic page title, navigation jumps */
---

<style>
   header {
      backdrop-filter: blur(12px);
      z-index: 1;
      position: fixed;
      height: 62px;
      width: 100%;
      display: flex;

      span {
         font-size: 1.2rem;
         font-weight: 600;
      }

      header-content {
         max-width: var(--max-width);
         margin: 0 auto;
         display: flex;
         gap: 2rem;
         flex-direction: row;
         flex-grow: 1; /* So that it takes max width */
         align-items: center;
         justify-content: start;
      }
      nav {
         display: flex;
         gap: 1.2rem;
      }
      .nav-title-link {
         color: var(--text-primary);
         text-decoration: none;
      }
      .nav-link {
         color: var(--text-primary);
      }
   }
   @media (max-width: 768px) {
      header {
         span {
            display: none;
         }
         header-content {
            justify-content: center;
         }
      }
   }
</style>
<header>
   <header-content>
      <span><a class="nav-title-link" href="/">{pageTitle}</a></span>
      <nav class="nav-menu">
         <a class="nav-link" href="/">Home</a>
         <a class="nav-link" href="/projects/">Projects</a>
         <a class="nav-link" href="/blog/">Blog</a>
         <a class="nav-link" href="/about/">About</a>
      </nav>
   </header-content>
</header>
